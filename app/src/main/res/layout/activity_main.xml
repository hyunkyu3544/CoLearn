<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.androidtown.colearn.MainActivity"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Co-Learn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/state"
            android:id="@+id/btnState"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plant State(Temperature Humidity)"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"
                android:id="@+id/txtArduino"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:id="@+id/lOpen">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/cover"
                    android:clickable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:text="Open"
                    android:clickable="false"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:id="@+id/lClose">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/close1"
                    android:src="@drawable/close"
                    android:clickable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:text="Close"
                    android:clickable="false"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="0sp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/water"
            android:id="@+id/btnWater"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="Cording"
            android:textSize="20dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text1"
            android:layout_alignTop="@+id/text1"
            android:layout_below="@+id/text1"
            android:layout_marginTop="40dp"
            android:text="Arduino"
            android:textSize="20dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text2"
            android:layout_alignTop="@+id/text2"
            android:layout_below="@+id/text2"
            android:layout_marginTop="40dp"
            android:text="Co-Learn"
            android:textSize="20dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_alignLeft="@+id/text3"
            android:layout_alignTop="@+id/text3"
            android:layout_below="@+id/text3"
            android:layout_marginTop="40dp"
            android:text="Q A"
            android:textSize="20dp"
            android:visibility="visible"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textA"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="컴퓨터가 이해할 수 있는 언어로, 코드를 사용해 컴퓨터에 명령과 정보를 만드는 작업을 말한다. 코드는 컴퓨터 화면에서 거의 나타나지 않지만, 은밀한 곳에 숨어서 모든 것을 가능하게 작동시킨다."
            android:textSize="20dp"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textB"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="Arduino는 2005년 이탈리아의 IDII에서 하드웨어에 익숙지 않은 학생들이 자신들의 디자인 작품을 손쉽게 제어할 수 있게 하려고 고안되었다. 다양한 센서를 사용해 자신만의 창작물을 만들어 볼 수 있다."
            android:textSize="20dp"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textC"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="코런은 아두이노와 다양한 스마트 센서를 활용한 제품을 만드는 기업입니다. 교육에 사각지대에 있는 모두에게 코딩에 대한 즐거움을 선사하고, 사용자와 함께 발전해 나가겠습니다."
            android:textSize="20dp"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textD"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="문의사항은 이메일로 보내주세요. hyunkyu3544@naver.com"
            android:textSize="20dp"
            android:visibility="invisible"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"
            android:textSize="10dp"
            android:id="@+id/btnBack"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>
